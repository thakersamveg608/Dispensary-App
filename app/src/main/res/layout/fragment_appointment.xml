                <!--android:id="@+id/text_time"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="30dp"-->
                <!--android:gravity="bottom"-->
                <!--android:paddingRight="5dp"-->
                <!--android:textSize="18dp"-->
