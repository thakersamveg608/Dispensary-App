<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ProgressBar
        android:id="@+id/progressBar_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="1dp"
        android:visibility="gone"
        android:indeterminateTint="@color/underline"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="Appointment"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:backgroundTint="@color/grey"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="Patient's Full Name"/>
        <EditText
            android:id="@+id/issue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:backgroundTint="@color/grey"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="Medical Issue"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:paddingRight="5dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="Date"
                android:drawableRight="@drawable/down_arrow"
                android:clickable="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1.25dp"
                android:background="@color/grey"
                android:layout_below="@+id/text_date"></View>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:paddingRight="5dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="Time"
                android:drawableRight="@drawable/down_arrow"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1.25dp"
                android:background="@color/grey"
                android:layout_below="@+id/text_time">

            </View>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/issue_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/regular_radio"
                    android:checked="true"
                    android:buttonTint="@color/white"
                    android:layout_marginLeft="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Regular"/>
                <RadioButton
                    android:id="@+id/emergency_radio"
                    android:buttonTint="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Emergency"/>
            </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/appoint"
            android:background="@drawable/button_rounded_corner2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:text="Appoint"/>

    </LinearLayout>

</RelativeLayout>